<div class="tasks">
  <% if @task.completed %>
    <h2>[<i class='fas fa-check'></i>] <%= @task.title %></h2>  
  <% else %>
    <h2>[<i class="fas fa-times"></i>] <%= @task.title %></h2>
  <% end %>
  <p><%= @task.details %></p>
  <%= link_to "All tasks", tasks_path, class: 'btn btn-info' %>
  <%= link_to "Edit task", edit_task_path(@task.id), class: 'btn btn-warning'%>
  <%= link_to "Delete task", task_path(@task.id), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
